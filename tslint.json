{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended"],
    "jsRules": {},
    "rules": {
        "ordered-imports": false,
        "max-line-length": [true, 140],
        "semicolon": [true, "never"],
        "no-empty": false,
        "no-console": false,
        "quotemark": [true, "single"],
        "no-bitwise": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ]
    },
    "rulesDirectory": []
}
